#!/usr/bin/env php
<?php

// set to run indefinitely if needed
set_time_limit(0);

/* Optional. Itâ€™s better to do it in the php.ini file */
date_default_timezone_set('Europe/Lisbon');

// include the composer autoloader
require_once __DIR__ . '/../vendor/autoload.php'; 

// import the Symfony Console Application 
use Symfony\Component\Console\Application;
use MASNathan\DevTools\Commands\Github\ListCommand as GithubListCommand;
use MASNathan\DevTools\Commands\Github\CloneCommand as GithubCloneCommand;

$app = new Application('MASNathan Dev Tools', '0.1');
$app->add(new GithubListCommand());
$app->add(new GithubCloneCommand());
$app->run();
